Page, .container{
    height: 100%;
}
.container{
    margin: 0;
    padding: 0;
    display:flex;
}
.category-left
{
    float: left;
    width: 200rpx;
    height: 100%;
    border-right: 1px solid #ddd;
    box-sizing: border-box
}
/* 隐藏滑动条 */
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
  }
  
.category-left .nav_left_items{
    line-height: 90rpx;
    text-align: center;
    border-left: 3px solid #fff;
    font-size: 14px;
}
.category-left  .nav_left_items.active {
    color: #fb7d34;
    border-color: #AB956D;
  }
.category-right {
    float: right;
    width: 900rpx;
    height: 100%;
    overflow: hidden;
  }
  .goods {
    height: 100%;
    padding: 30rpx;
    box-sizing: border-box;
  }
  .goods .cate-banner image{
    display: block;
    width: 100%;
    height: 190rpx;
}
.goods .goods-header image{
    display: block;
    height: 200rpx;
    width: 100%;

}
/* 分类 手机 */
.goods-title{
     position: relative;
    height: 30rpx;
    line-height: 30rpx;
    padding:30rpx 0 55rpx;
    text-align: center;
    color: #3c3c3c;
    font-size: 36rpx;
} 
.goods-title::before{
    position: absolute;
    left: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 2rpx;
    background: rgb(202, 192, 173);
}
.goods-title::after{
    position: absolute;
    right: 130rpx;
    top: 43rpx;
    content: '';
    width: 70rpx;
    height: 2rpx;
    background: #AB956D;
}
.goods-lists {
    display: inline-block;
    width: 160rpx;
    height: 160rpx;
    text-align: center;
    margin:0 20rpx 20rpx 0;
    font-size: 24rpx;
}
.goods-lists image{
    width: 80rpx;
    height: 80rpx;

}
.goods-name{
    font-size: 28rpx;
    color:rgba(0,0,0,0.54)
}
